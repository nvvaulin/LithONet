{
    "name": "segment_refine",
    "n_gpu": 1,
    "use_synch_bn": true,

    "arch": {
        "type": "PSPNet",
        "args": {
            "in_channels": 8,
            "pretrained": false,
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "Norway",
        "args":{
            "data_dir": "../data/Norway",
            "batch_size": 6,
            "crop_size": 255,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "elastic": true,
            "blur": false,
            "split": "train_aug",
            "num_workers": 1
        }
    },

    "val_loader": {
        "type": "Norway",
        "args":{
            "data_dir": "../data/Norway",
            "batch_size": 6,
            "val": true,
            "split": "val",
            "num_workers": 1
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 20,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 25,
        "save_dir": "saved_psp/",
        "save_period": 1,
  
        "monitor": "max Mean_IoU",
        "early_stop": 1,
        
        "tensorboard": true,
        "log_dir": "saved_psp/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 1
    }
}
